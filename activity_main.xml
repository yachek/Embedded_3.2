<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/forSpinner"
        android:text="@string/forSpinner"/>

    <Spinner
        android:id="@+id/spinner_st"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/forSpinner"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/switch_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/spinner_st">
        <Switch
            android:id="@+id/switch_deadline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:showText="true"
            android:text="@string/forSwitch"
            android:textOff="@string/textOff"
            android:textOn="@string/textOn" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_d"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/switch_layout"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        />

    <Button
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/calculate_button"
        android:layout_below="@+id/spinner_d"
        android:text="@string/button_calc"/>

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/result_text"
        android:layout_below="@+id/calculate_button"
        android:text="@string/res"/>

</RelativeLayout>